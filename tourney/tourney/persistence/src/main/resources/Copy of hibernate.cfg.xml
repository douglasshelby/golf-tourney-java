<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory name="TourneySessionFactory">
        <property name="hibernate.connection.driver_class">org.gjt.mm.mysql.Driver</property>
<!--         <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property> -->
        <property name="hibernate.connection.password">letmein</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/tourney</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.default_schema">tourney</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQL5Dialect</property>
        <property name="show_sql">true</property>
        <mapping resource="tourney.hbm.xml"/>
    </session-factory>
</hibernate-configuration>
